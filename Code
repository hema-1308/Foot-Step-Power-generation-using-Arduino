#include <LiquidCrystal.h>

// Pin configuration for LCD
const int rs = 12;
const int en = 11;
const int d4 = 5;
const int d5 = 4;
const int d6 = 3;
const int d7 = 2;
LiquidCrystal lcd(rs, en, d4, d5, d6, d7);
// Analog input pin for voltage sensor
const int vs = A0;
void setup() {
  // Begin serial monitor at 9600 baud for debugging
  Serial.begin(9600);
  pinMode(vs, INPUT);
  lcd.begin(16, 2);
  lcd.print("Footstep Power!");
  delay(2000);
  lcd.clear();
}

void loop() {
  // Read analog voltage value from sensor
  int vval = analogRead(vs);

  // Convert the raw value to actual voltage (voltage divider if used)
  float voltage = (vval * 5.0) / 1023.0;  // For default 5V reference
  lcd.clear();
  lcd.setCursor(0, 0);
  lcd.print("V: ");
  lcd.print(voltage, 2); // 2 decimal places
  // Display status on serial monitor for debugging
  Serial.print("Voltage: ");
  Serial.println(voltage, 2);
  // Update display every 0.5 seconds
  delay(500);
}
